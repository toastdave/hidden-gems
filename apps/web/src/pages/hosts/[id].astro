---
import { Alert, AlertDescription, AlertTitle } from "../../components/ui/alert";
import { Badge } from "../../components/ui/badge";
import { Card, CardContent, CardHeader, CardTitle } from "../../components/ui/card";
import Layout from "../../layouts/Layout.astro";
import { apiServerBase, fetchApiJson } from "../../lib/api";

const apiBase = apiServerBase;
const hostId = Astro.params.id;
const result = await fetchApiJson<{
  host: Record<string, unknown>;
  listings: Array<Record<string, unknown>>;
}>(`${apiBase}/hosts/${hostId}`);
const data = result.data;
---

<Layout title="Host Profile | Hidden Gems">
  {
    !result.ok || !data ? (
      <Alert variant="destructive">
        <AlertTitle>Host not found</AlertTitle>
        <AlertDescription>{result.error}</AlertDescription>
      </Alert>
    ) : (
      <>
        <Card>
          <CardHeader>
            <CardTitle>{data.host.name}</CardTitle>
          </CardHeader>
          <CardContent class="space-y-2">
            <div class="flex items-center gap-2">
              <span class="text-sm text-muted-foreground">Host type</span>
              <Badge variant="secondary">{String(data.host.type)}</Badge>
            </div>
            <p class="text-sm text-muted-foreground">
              Contact: {String(data.host.contactEmail ?? "No contact email")}
            </p>
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle class="text-lg">Published Listings</CardTitle>
          </CardHeader>
          <CardContent class="space-y-3">
          {data.listings.length === 0 ? <p>No published listings yet.</p> : null}
          {data.listings.map((listing: any) => (
            <div class="rounded-md border p-3">
              <p class="font-medium">{listing.title}</p>
              <p class="text-sm text-muted-foreground">{listing.locationText ?? "No location"}</p>
            </div>
          ))}
          </CardContent>
        </Card>
      </>
    )
  }
</Layout>
