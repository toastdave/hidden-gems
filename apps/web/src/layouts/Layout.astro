---
import "../styles/globals.css";
import { Button } from "../components/ui/button";

interface Props {
  title?: string;
}

const { title = "Hidden Gems" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased">
    <header class="sticky top-0 z-20 border-b bg-background/95 backdrop-blur">
      <div class="mx-auto flex w-full max-w-6xl items-center justify-between gap-4 px-4 py-3">
        <a href="/" class="text-base font-semibold tracking-tight">Hidden Gems</a>
        <nav class="flex flex-wrap items-center gap-2">
          <Button variant="ghost" size="sm" asChild><a href="/auth">Auth</a></Button>
          <Button variant="ghost" size="sm" asChild><a href="/hosts/new">Host</a></Button>
          <Button variant="ghost" size="sm" asChild><a href="/listings/new">New Listing</a></Button>
          <Button variant="ghost" size="sm" asChild><a href="/favorites">Favorites</a></Button>
          <Button variant="ghost" size="sm" asChild><a href="/alerts">Alerts</a></Button>
          <Button variant="ghost" size="sm" asChild><a href="/billing">Billing</a></Button>
          <Button variant="ghost" size="sm" asChild><a href="/admin/reports">Moderation</a></Button>
        </nav>
      </div>
    </header>
    <main class="mx-auto w-full max-w-6xl space-y-4 px-4 py-6">
      <slot />
    </main>
  </body>
</html>
