{
  "name": "hidden-gems",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "lint": "bunx biome check .",
    "lint:fix": "bunx biome check --write .",
    "typecheck": "bun run --filter '*' typecheck",
    "test": "bun run --filter '*' test",
    "db:migrate:docker": "docker compose run --rm api bun run --filter @hidden-gems/db db:migrate",
    "db:seed:docker": "docker compose run --rm api bun run --filter @hidden-gems/db db:seed"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "typescript": "^5.7.3"
  }
}
